<h1>More Information</h1>  
<head>
<style>
table, th, td{
  border: 1px solid black;
  background-color: green
  border-collapse: collapse;
}
</style>
</head>
<table>  
  <thead>  
    <tr>  
      <th>Post ID</th>  
      <th>Title</th>  
      <th>Content</th>  
      <th>Comment ID</th>  
      <th>Comment</th>  
      <th colspan="3">Comments Action</th>  
      <th colspan="3">Posts Action</th>  
    </tr>  
  </thead>  
  <tbody>  
    <!-- @comments is passed from controller to view -->  
    <% @comments.each do |comment| %>           <!-- for loop -->  
      <tr>  
        <td><%= comment.postt.id %></td>         <!--get Post ID using reference -->  
        <td><%= comment.postt.title %></td>      <!--get Post title using ref -->  
        <td><%= comment.postt.content %></td>    <!--get Post content using ref -->  
        <td><%= comment.id %></td>              <!--get Comment ID -->  
        <td><%= comment.comment %></td>         <!--get Comment from Comment -->  
        <td><%= link_to 'Show Comment', comment %></td>  
        <td><%= link_to 'Edit Comment', edit_comment_path(comment) %></td>  
        <td><%= link_to 'Destroy Comment', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
        <td><%= link_to 'Show Post', comment.postt %></td>  
        <td><%= link_to 'Edit Post', edit_postt_path(comment.postt) %></td>  
        <td><%= link_to 'Destroy Post', comment.postt, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>  
    <% end %>  
  </tbody>  
</table>
<%= link_to 'New Postt', new_postt_path %>